<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="~/icons/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/Content/bootstrap.min.css">

    <link rel="stylesheet" href="~/Areas/Admin/Content/admin.css">

    <title>Document</title>
</head>
<body>
    <input type="checkbox" id="nav-toggle">
    <div class="sidebar">
        <div class="sidebar-brand">
            <h2>
                <span class="las la-mobile-alt"></span>
                <span>Whale Shop</span>
            </h2>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li>
                    <a href="@Url.Action("Index","AdminHome")" @*class="active"*@>
                        <span class="las la-igloo"></span>
                        <span>Thống kê báo cáo</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index","CustomersAdmin")">
                        <span class="las la-users"></span>
                        <span>Quản lý tài khoản</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index","NewsAdmin")">
                        <span class="las la-clipboard-list"></span>
                        <span>Quản lý tin tức</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index","AdminProducts")">
                        <span class="las la-receipt"></span>
                        <span>Quản lý sản phẩm</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index","AdminOrder")">
                        <span class="las la-shopping-bag"></span>
                        <span>Quản lý đơn hàng</span>
                    </a>
                </li>


                <li>
                    <a href="@Url.Action("Index","AdminCategories")">
                        <span class="las la-clipboard-list"></span>
                        <span>Quản lý thương hiệu</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="main-content">
        <div class="header-admin">
            <div class="header-title" style="font-size:30px">
                <label for="nav-toggle"><i class="las la-bars"></i>Trang quản lý</label>
            </div>

            <div class="user-wrapper">
                <img src="~/image/admin.jpg" style="width:40px; height:40px" alt="">
                <div>
                    <h4>User Admin</h4>

                    <a href="/Users/Logout" style="text-decoration:none;color:gray"><i class="bi bi-box-arrow-right"></i> Đăng xuất</a>

                </div>
            </div>
        </div>
        <div class="main-admin">
            @RenderBody()
        </div>

    </div>
    <script>
    imgInp.onchange = evt => {
        const [file] = imgInp.files
        if (file) {
            blah.src = URL.createObjectURL(file)
        }
    }
    imgImp.onchange = evt => {
        const [file] = imgImp.files
        if (file) {
            bleh.src = URL.createObjectURL(file)
        }
    }
    imgIop.onchange = evt => {
        const [file] = imgIop.files
        if (file) {
            bldh.src = URL.createObjectURL(file)
        }
    }
    </script>
</body>
</html>
